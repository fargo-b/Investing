## yFinance stock data
stocklist = ['RIO.L', 'ULVR.L', 'BNZL.L', 'GSK.L'] 
end_date = dt.datetime.now()
start_date = dt.datetime(2000,1,1)
data = yf.download(stocklist, start=start_date, end=end_date)
Close = data['Adj Close']

